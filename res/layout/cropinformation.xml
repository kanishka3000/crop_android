<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget151"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/podda2"
>
<LinearLayout
android:id="@+id/widget161"
android:layout_width="fill_parent"
android:layout_height="49px"
>
<ImageButton android:background="@android:color/transparent"
android:id="@+id/togglebutton"

android:layout_width="100px"
android:layout_height="50px"
android:layout_marginLeft="25px"

android:layout_marginTop="10px"
android:src="@drawable/loca2"

>
</ImageButton>
<ImageButton android:background="@android:color/transparent"
android:id="@+id/home"

android:layout_width="100px"
android:layout_height="50px"
android:layout_marginRight="25px"
android:layout_marginTop="10px"
android:src="@drawable/home2"
>
</ImageButton>
</LinearLayout>
<LinearLayout
android:id="@+id/widget171"
android:layout_width="fill_parent"
android:layout_height="54px"
>
<ImageButton android:background="@android:color/transparent"
android:id="@+id/prevbutton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="70px"
android:src="@drawable/one"
>
</ImageButton>
<ImageButton android:background="@android:color/transparent"
android:id="@+id/nextbutton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="100px"
android:src="@drawable/two"
>
</ImageButton>
</LinearLayout>
<TextView
android:id="@+id/topic"
android:layout_width="151px"
android:layout_height="31px"
android:text="TextView"
android:textColor="#000"
>
</TextView>


<GridView
android:id="@+id/gridtext"
android:layout_width="fill_parent" 
android:layout_height="wrap_content"

/>
<TextView
android:id="@+id/topicsortedby"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text=""
android:textColor="#000"
/>



</LinearLayout>